    <script src="https://d3js.org/d3.v6.min.js"></script>
    <script>
        function drawit(jsonString) {

            let dataValues = JSON.parse(jsonString);
            console.log(dataValues)

            //drawing code goes here.       
            let mySelection = d3.select("#drawingplace")
                .data(dataValues)
                .selectAll("rect")
                .data(dataValues)
                .attr("fill", "black")
                .attr("width", 80)
                .attr("height", function (d) {
                    return d
                })
                .attr("y", function (d) {
                    return 300 - d
                })


            mySelection.enter()
                .append("rect")
                .attr("height", function (d) {
                    return d
                })
                .attr("width", 80)
                .attr("x", function (item, index, srcArr) {
                    return index * 80
                })
                .attr("y", function (d) {
                    return 300 - d
                })


        }
    </script>

    <h1>Solution</h1>
    <p>
        enter your values here:
